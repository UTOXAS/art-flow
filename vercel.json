{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/bootstrap/(.*)",
            "dest": "public/bootstrap/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "public/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "public/js/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "public/images/$1"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "public/uploads/$1"
        },
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "public/index.html",
            "headers": {
                "Cache-Control": "no-cache"
            }
        }
    ]
}